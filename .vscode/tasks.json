{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Maven: Build",
			"type": "shell",
			"command": "mvn",
			"args": [
				"clean",
				"compile"
			],
			"group": "build",
			"isBackground": false
		},
		{
			"label": "Start Spring Boot Application",
			"type": "shell",
			"command": "mvn",
			"args": [
				"spring-boot:run"
			],
			"group": "build",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Maven: Package",
			"type": "shell",
			"command": "mvn",
			"args": [
				"clean",
				"package"
			],
			"group": "build",
			"isBackground": false
		}
	]
}